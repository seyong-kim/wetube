extends layouts/main

block content
    .form-container
        form(action=`${router.videos}${router.upload}`, method="post", enctype="multipart/form-data")
            label(for="file") Video File
            input(type="file",id="file",name="viedoFile",required=true,accept="video/*")
            input(type="text", placeholder="Title", name="title", required=true)
            textarea(name="description", placeholder="Description", required=true)
            input(type="submit", value="Upload Video")