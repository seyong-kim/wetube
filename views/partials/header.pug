header.header
    .header_column
        a(href=router.home) 
            i.fab.fa-youtube
    .header_column
        form(action = router.search, method = "get")
            input(type="text", placeholder="Search by term...", name = "term")

    .header_column
        ul
            if !user.isAuthenticated
                li
                    a(href=router.join) Join
                li
                    a(href=router.login) Log In
            else
                li
                    a(href=`${router.videos}${router.upload}`) Upload
                li
                    a(href=router.userDetail(user.id)) Profile
                li
                    a(href=router.logout) Log Out